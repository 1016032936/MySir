<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/write_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/voice_writer"
            android:gravity="center"
            android:text="备忘录" />

        <TextView
            android:id="@+id/sousuo_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/sousuo"
            android:gravity="center"
            android:text="语音搜搜" />

        <TextView
            android:id="@+id/baidu_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用列表扩展"
            android:layout_weight="1"
            android:drawableTop="@drawable/app_store"
            android:gravity="center"/>
    </LinearLayout>



    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:layout_marginTop="5dp"
            android:id="@+id/list_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f0f4"
            android:divider="#00000000"
            android:dividerHeight="0dip">

        </ListView>

        <include layout="@layout/webitem" />
    </FrameLayout>
</LinearLayout>