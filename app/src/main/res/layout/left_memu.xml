<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60cfb7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/touxiang" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Window_on_of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/enter_isenter"
                android:drawableLeft="@mipmap/woniu"
                android:gravity="center_vertical"
                android:text="语音悬浮栏"
                android:textColor="#000"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/toggle_onoff"
                style="@style/MyToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:gravity="center"
                android:textOff="关闭"
                android:textOn="启动" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voice_on_of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/enter_isenter"
                android:drawableLeft="@mipmap/woniu"
                android:gravity="center_vertical"
                android:text="语音合成"
                android:textColor="#000"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/tg_voice_onoff"
                style="@style/MyToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:gravity="center"
                android:textOff="关闭"
                android:textOn="启动" />
        </LinearLayout>


        <TextView
            android:id="@+id/setting_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/enter_isenter"
            android:drawableLeft="@mipmap/woniu"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="#000"
            android:textSize="18sp"  />

        <TextView
            android:id="@+id/app_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/enter_isenter"
            android:drawableLeft="@mipmap/woniu"
            android:gravity="center_vertical"
            android:text="应用信息"
            android:textColor="#000"
            android:textSize="18sp"  />
    </LinearLayout>

</RelativeLayout>