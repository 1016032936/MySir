<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#60cfb7"
    android:padding="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sousuo_start"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@mipmap/sousuo" />

    <EditText
        android:id="@+id/sousuo_ed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/send_btn_normal" />

    <TextView
        android:id="@+id/y_sousuo_shuru"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/msg_voice" />
</LinearLayout>